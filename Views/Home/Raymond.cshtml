@{
    ViewData["@Title"] = "Raymond";
}

<style>
    .blocks{
        width:33%;
        float:left;
        text-align:center;
        margin-top:20px;
    }
    button{
        padding:10px;
        background-color:yellowgreen;
        border:1px solid green;
    }
    .drops{
        border:1px solid white;
        color:white;
        padding:10px;
        margin-left:10px;
    }
    .arrows{
        color:white;
        padding:10px;
        background-color:yellowgreen;
        text-decoration:none;
        margin-left:20px;
    }
    img{
        height:200px;
        width:324px;
    }
</style>


<div style="background-color:LightSeaGreen;padding:20px">
    <span class="drops">
        <select onchange="pa(this.value)">
            <option disabled selected>BRAND</option>
            <option value="./Laopala">LA'OPALA</option>
            <option value="./Raymond">RAYMOND</option>
        </select>
        <script>
            function pa(src)
            {
                window.location=src;
            }
        </script>
    </span>
    <span class="drops">
        <select onchange="la(this.value)">
            <option disabled selected>TYPE</option>
            <option value="./Mugs">Mugs</option>
            <option value="./Tshirts">T-SHIRT</option>
        </select>
        <script>
            function la(src)
            {
                window.location=src;
            }
        </script>
    </span>
    <a href="./Second" class="arrows">&lt;</a>
</div>
